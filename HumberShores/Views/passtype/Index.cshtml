@model IEnumerable<HumberShores.Models.PASS_TYPE>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2>Index</h2>
    
    <div class="pull-right">
        <a href="@Url.Action("Index", "Passes")">View Buyers</a>
    </div>
    

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
